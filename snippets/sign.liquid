{% case sigen %}

  {% when 'plus' %}
    <svg
      width="105px"
      height="105px"
      viewBox="0 0 32 32"
      id="i-plus"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      stroke="currentcolor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      transform="rotate(0)">
      <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
      <g
        id="SVGRepo_tracerCarrier"
        stroke-linecap="round"
        stroke-linejoin="round"></g>
      <g id="SVGRepo_iconCarrier">
        <path d="M16 2 L16 30 M2 16 L30 16"></path>
      </g>
    </svg>

  {% when 'minus' %}
    <svg
      width="137px"
      height="137px"
      viewBox="0 0 24 24"
      fill="none"
      stroke-width="2"
      xmlns="http://www.w3.org/2000/svg">
      <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
      <g
        id="SVGRepo_tracerCarrier"
        stroke-linecap="round"
        stroke-linejoin="round"></g>
      <g id="SVGRepo_iconCarrier">
        <rect
          width="24"
          height="24"
          fill="white"></rect>
        <path
          d="M6 12H18"
          stroke="#000000"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </g>
    </svg>
{% endcase %}